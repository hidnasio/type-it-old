<h3 class="heading heading--small heading--spaced">{{model.title}}</h3>

<div class="section-viewer">
  <div class="section-viewer__container" style={{positionClass}}>
    {{#each model.sections as |section|}}
      <p class="section-viewer__content">
        {{section.content}}
      </p>
    {{/each}}
  </div>
  <div class="section-viewer__overlay"></div>
</div>
<button {{action "next"}}>Go</button>
